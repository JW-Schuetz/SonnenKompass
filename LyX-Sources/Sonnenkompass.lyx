\begin_inset Note Note
status collapsed

\begin_layout Subsection*
Nebenrechnung
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\begin{eqnarray*}
\sin\left(\Theta_{G}-\psi\right)\left(-\cos^{2}\psi\sin\alpha\cos\Omega+\cos\psi\cos\alpha\sin\Omega\right)+\cos\left(\Theta_{G}-\psi\right)\left(-\cos\psi\sin\psi\sin\alpha\cos\Omega+\sin\psi\cos\alpha\sin\Omega\right) & = & 0\\
\tan\left(\Theta_{G}-\psi\right)\left(-\cos^{2}\psi\sin\alpha\cos\Omega+\cos\psi\cos\alpha\sin\Omega\right)+\left(-\cos\psi\sin\psi\sin\alpha\cos\Omega+\sin\psi\cos\alpha\sin\Omega\right) & = & 0\\
-T_{G}\cos^{2}\psi\sin\alpha\cos\Omega+T_{G}\cos\psi\cos\alpha\sin\Omega-\cos\psi\sin\psi\sin\alpha\cos\Omega+\sin\psi\cos\alpha\sin\Omega & = & 0\\
-T_{G}\cos^{2}\psi\sin\alpha\cos\Omega-\cos\psi\sin\psi\sin\alpha\cos\Omega+T_{G}\cos\psi\cos\alpha\sin\Omega+\sin\psi\cos\alpha\sin\Omega & = & 0\\
\left(-T_{G}\cos^{2}\psi-\cos\psi\sin\psi\right)\sin\alpha\cos\Omega+\left(T_{G}\cos\psi+\sin\psi\right)\cos\alpha\sin\Omega & = & 0\\
\left(T_{G}\cos\psi+\sin\psi\right)\cos\alpha\sin\Omega & = & \left(T_{G}\cos^{2}\psi+\cos\psi\sin\psi\right)\sin\alpha\cos\Omega\\
\left(T_{G}\cos\psi+\sin\psi\right)\tan\Omega & = & \left(T_{G}\cos^{2}\psi+\cos\psi\sin\psi\right)\tan\alpha\\
\tan\alpha & = & \frac{\left(T_{G}\cos\psi+\sin\psi\right)\tan\Omega}{T_{G}\cos^{2}\psi+\cos\psi\sin\psi}\\
 & = & \frac{\left(T_{G}\cos\psi+\sin\psi\right)\tan\Omega}{\left(T_{G}\cos\psi+\sin\psi\right)\cos\psi}\\
 & = & \frac{\tan\Omega}{\cos\psi}
\end{eqnarray*}

\end_inset


\end_layout

\end_inset

 
\begin_inset Formula 
\begin{eqnarray*}
\alpha_{M} & = & \arctan\left(\frac{\tan\Omega}{\cos\psi}\right)+n\pi.
