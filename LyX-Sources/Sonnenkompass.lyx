\begin_layout Standard
Für die Drehmatrix folgt damit 
\begin_inset Note Note
status collapsed

\begin_layout Subsection*
Inverse 
\end_layout

\begin_layout Plain Layout
Es gilt mit der Einheitsmatrix 
\begin_inset Formula $I$
\end_inset

 
\begin_inset Formula 
\[
D_{\alpha}^{-1}D_{\left(-\alpha\right)}=I.
\]

\end_inset


\end_layout

\begin_layout Subsection*
Gruppeneigenschaft 
\end_layout

\begin_layout Plain Layout
Es gilt 
\begin_inset Formula 
\[
D_{\left(\alpha+\beta\right)}=D_{\alpha}D_{\beta}=D_{\beta}D_{\alpha}.
\]

\end_inset


\end_layout

\begin_layout Subsection*
Zerlegung in geraden und ungeraden Anteil 
\end_layout

\begin_layout Plain Layout
Man kann die Drehmatrix 
\begin_inset Formula $D_{\alpha}$
\end_inset

 in einen bezüglich des Drehwinkels 
\begin_inset Formula $\alpha$
\end_inset

 geraden 
\begin_inset Formula $G_{\alpha}$
\end_inset

 und einen ungeraden Anteil 
\begin_inset Formula $U_{\alpha}$
\end_inset

 zerlegen 
\begin_inset Formula 
\[
D_{\alpha}=G_{\alpha}+U_{\alpha}.
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Dabei gilt für die beiden Anteile 
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\begin{eqnarray*}
G_{\alpha} & = & \begin{pmatrix}\sin^{2}\psi\left(1-\cos\alpha\right)+\cos\alpha & 0 & \sin\psi\cos\psi\left(1-\cos\alpha\right)\\
0 & \cos\alpha & 0\\
\cos\psi\sin\psi\left(1-\cos\alpha\right) & 0 & \cos^{2}\psi\left(1-\cos\alpha\right)+\cos\alpha
\end{pmatrix}\\
U_{\alpha} & = & \begin{pmatrix}0 & -\cos\psi & 0\\
\cos\psi & 0 & -\sin\psi\\
0 & \sin\psi & 0
\end{pmatrix}\sin\alpha.
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Plain Layout
Es folgt für 
\begin_inset Formula $D_{\left(-\alpha\right)}$
\end_inset

 der Zusammenhang 
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\begin{eqnarray*}
D_{\left(-\alpha\right)} & = & G_{\left(-\alpha\right)}+U_{\left(-\alpha\right)}\\
 & = & G_{\alpha}-U_{\alpha}.
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Subsection*
Astronomischer Mittag 
\end_layout

\begin_layout Plain Layout
Es gilt der nachfolgende Zusammenhang 
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\[
\cos\alpha_{M}\sin\Omega-\cos\Omega\cos\psi\sin\alpha_{M}=0
\]

\end_inset


\end_layout

\begin_layout Plain Layout
oder äquivalent 
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\begin{eqnarray*}
\alpha_{M} & = & \arctan\left(\frac{\tan\Omega}{\cos\psi}\right)+n\pi.
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Plain Layout
Mit der Abkürzung 
\begin_inset Formula $\xi=\sqrt{\cos^{2}\psi+\tan^{2}\Omega}$
\end_inset

 bekommt man für die Drehmatrix 
\begin_inset Formula $D_{\left(\alpha_{M}\right)}$
\end_inset

 (siehe 
\begin_inset Quotes gld
\end_inset

Symmetrie.m
\begin_inset Quotes grd
\end_inset

) 
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\[
D_{\left(\alpha_{M}\right)}=\frac{1}{\xi}\left(\begin{array}{ccc}
D_{11} & D_{12} & D_{13}\\
-D_{12} & D_{22} & D_{23}\\
D_{13} & -D_{23} & D_{33}
\end{array}\right)
\]

\end_inset


\end_layout

\begin_layout Plain Layout
mit den Matrizenelementen 
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\begin{eqnarray*}
D_{11} & = & \xi\sin^{2}\psi+\left|\cos\psi\right|\cos^{2}\psi\\
D_{12} & = & \left|\cos\psi\right|\tan\Omega\\
D_{13} & = & -\cos\psi\sin\psi\left(\left|\cos\psi\right|-\xi\right)\\
D_{22} & = & \left|\cos\psi\right|\\
D_{23} & = & \left|\cos\psi\right|\tan\psi\tan\Omega\\
D_{33} & = & \left|\cos\psi\right|\sin^{2}\psi+\xi\cos^{2}\psi.
\end{eqnarray*}

\end_inset


\end_layout

\end_inset

 
\begin_inset Note Note
status collapsed

\begin_layout Subsection*
Ableitung 
\end_layout

\begin_layout Plain Layout
Die Drehmatrix
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\[
D_{\left(-\alpha\right)}=\begin{pmatrix}\sin^{2}\psi\left(1-\cos\alpha\right)+\cos\alpha & \cos\psi\sin\alpha & \sin\psi\cos\psi\left(1-\cos\alpha\right)\\
-\cos\psi\sin\alpha & \cos\alpha & \sin\psi\sin\alpha\\
\cos\psi\sin\psi\left(1-\cos\alpha\right) & -\sin\psi\sin\alpha & \cos^{2}\psi\left(1-\cos\alpha\right)+\cos\alpha
\end{pmatrix}
\]

\end_inset

besitzt wegen 
\begin_inset Formula 
\begin{eqnarray*}
\frac{\partial}{\partial\alpha}\left(\sin\alpha\right) & = & \cos\alpha\\
\frac{\partial}{\partial\alpha}\left(\cos\alpha\right) & = & -\sin\alpha
\end{eqnarray*}

\end_inset

die Ableitung 
\begin_inset Note Note
status open

\begin_layout Plain Layout
wegen: sin^2+cos^2=1
\end_layout

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\begin{eqnarray*}
\frac{\partial}{\partial\alpha}\left[D_{\left(-\alpha\right)}\right] & = & \begin{pmatrix}\sin^{2}\psi\sin\alpha-\sin\alpha & \cos\psi\cos\alpha & \sin\psi\cos\psi\sin\alpha\\
-\cos\psi\cos\alpha & -\sin\alpha & \sin\psi\cos\alpha\\
\cos\psi\sin\psi\sin\alpha & -\sin\psi\cos\alpha & \cos^{2}\psi\sin\alpha-\sin\alpha
\end{pmatrix}\\
 & = & \begin{pmatrix}\left(\sin^{2}\psi-1\right)\sin\alpha & \cos\psi\cos\alpha & \sin\psi\cos\psi\sin\alpha\\
-\cos\psi\cos\alpha & -\sin\alpha & \sin\psi\cos\alpha\\
\cos\psi\sin\psi\sin\alpha & -\sin\psi\cos\alpha & \left(\cos^{2}\psi-1\right)\sin\alpha
\end{pmatrix}\\
 & = & \begin{pmatrix}-\cos^{2}\psi\sin\alpha & \cos\psi\cos\alpha & \sin\psi\cos\psi\sin\alpha\\
-\cos\psi\cos\alpha & -\sin\alpha & \sin\psi\cos\alpha\\
\cos\psi\sin\psi\sin\alpha & -\sin\psi\cos\alpha & -\sin^{2}\psi\sin\alpha
\end{pmatrix}.
\end{eqnarray*}

\end_inset


\end_layout

\end_inset

 
\begin_inset Formula 
\begin{eqnarray}
D_{\alpha} & = & \begin{pmatrix}\sin^{2}\psi+\cos^{2}\psi\cos\alpha & -\cos\psi\sin\alpha & \sin\psi\cos\psi-\sin\psi\cos\psi\cos\alpha\\
